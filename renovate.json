{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies",
    "renovate",
    "{{{category}}}",
    "{{{datasource}}}",
    "vulnerability={{{if isVulnerabilityAlert 'yes' 'no'}}}",
    "{{{manager}}}"
  ],
  "pinDigests": false,
  "enabled": true,
  "separateMajorMinor": true,
  "automerge": true,
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpdateOptions": [
        {
          "gomodTidy": true
        }
      ]
    }
  ]
}
