{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies",
    "renovate",
    "renovate::{{{category}}}",
    "renovate::{{{datasource}}}",
    "renovate::{{{updateType}}}",
    "renovate::{{#if isVulnerabilityAlert}}vulnerability{{else}}not-vulnerability{{/if}}",
    "renovate::{{{manager}}}"
  ],
  "pinDigests": false,
  "enabled": true,
  "separateMajorMinor": true,
  "automerge": true,
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpdateOptions": [
        {
          "gomodTidy": true
        }
      ]
    }
  ]
}
